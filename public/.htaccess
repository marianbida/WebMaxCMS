directoryIndex app.php

<Files .htaccess>
deny from all
</Files>

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ app/app.php?req=$1			[QSA]
</IfModule>

<IfModule !mod_rewrite.c>
ErrorDocument 404 /app.php
</IfModule>